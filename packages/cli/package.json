{
  "name": "fastframe-cli",
  "version": "0.1.0",
  "description": "Command-line interface for FastFrame.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fastframe": "bin/fastframe.js"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts",
    "dev": "tsup src/index.ts --format cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "fastframe",
    "cli",
    "frontend",
    "framework"
  ],
  "author": "FastFrame Team",
  "license": "MIT",
  "dependencies": {
    "@fastframe/compiler": "workspace:*",
    "@fastframe/core": "workspace:*",
    "chalk": "^4.1.2",
    "commander": "^10.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "vite": "^4.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^8.2.6",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
