{
  "name": "@fastframe/compiler",
  "version": "0.1.0",
  "description": "Compiler and Vite plugin for FastFrame.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "fastframe",
    "compiler",
    "vite-plugin",
    "frontend",
    "framework"
  ],
  "author": "FastFrame Team",
  "license": "MIT",
  "dependencies": {
    "@fastframe/core": "workspace:*",
    "magic-string": "^0.30.0",
    "parse5": "^7.1.2"
  },
  "devDependencies": {
    "@types/parse5": "^7.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.1",
    "vitest": "^0.30.1"
  },
  "peerDependencies": {
    "vite": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
